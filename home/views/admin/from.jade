block append main
  //- 内容
  .main
    .mainTitle 用户资料1123
    .mainContent.contentBox
      .form
        .formList
          .formTitle 标题
          .formContent
            input.formTxt(type='text', placeholder='请输入内容')
        .formList
          .formTitle 下拉列表
          .formContent
            select.formSelect
              option 技术部
              option 销售部
        .formList
          .formTitle 单选
          .formContent
            label.formLabel
              input.formRadio(type='radio', value='1', name='testR')
              span 选项一
            label.formLabel
              input.formRadio(type='radio', value='2', name='testR')
              span 选项二
            label.formLabel
              input.formRadio(type='radio', value='3', name='testR')
              span 选项三
        .formList
          .formTitle 多选
          .formContent
            label.formLabel
              input.formCheckbox(type='checkbox', value='1', name='testC')
              span 选项一
            label.formLabel
              input.formCheckbox(type='checkbox', value='2', name='testC')
              span 选项二
            label.formLabel
              input.formCheckbox(type='checkbox', value='3', name='testC')
              span 选项三
        .formList
          .formTitle 备注
          .formContent
            textarea.formTxt(placeholder='请输入内容')
        .formBtnBox
          .formBtn 提交

