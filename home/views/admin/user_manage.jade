block append main
  //- 内容
  .main.max
    .mainTitle 用户管理
    .mainContent
      .jList.contentBox
        table.jTable
          thead
            tr
              th(width='100') 用户名
              th(width='160') 登录名
              th(width='160') 部门
              th(width='160') 性别
              th(width='160') 状态
              th 备注
          tbody
            -
              var lists = [
              {price: '17.00', time: '2016-05-31 11:22', confirmor: '固定菜式', confirmTime: '2016-05-31 11:22', status: 1, remark: ''},
              {price: '17.00', time: '2016-05-31 11:22', confirmor: '固定菜式', confirmTime: '2016-05-31 11:22', status: 1, remark: ''},
              {price: '17.00', time: '2016-05-31 11:22', confirmor: '固定菜式', confirmTime: '2016-05-31 11:22', status: 0, remark: ''},
              {price: '17.00', time: '2016-05-31 11:22', confirmor: '固定菜式', confirmTime: '2016-05-31 11:22', status: 1, remark: ''},
              {price: '17.00', time: '2016-05-31 11:22', confirmor: '固定菜式', confirmTime: '2016-05-31 11:22', status: 0, remark: ''},
              {price: '17.00', time: '2016-05-31 11:22', confirmor: '固定菜式', confirmTime: '2016-05-31 11:22', status: 0, remark: ''},
              {price: '17.00', time: '2016-05-31 11:22', confirmor: '固定菜式', confirmTime: '2016-05-31 11:22', status: 1, remark: ''},
              {price: '17.00', time: '2016-05-31 11:22', confirmor: '固定菜式', confirmTime: '2016-05-31 11:22', status: 1, remark: ''}
              ]
            each list in lists
              tr
                td.aCenter #{list.price}
                td.aCenter #{list.time}
                td.aCenter #{list.confirmor}
                td.aCenter #{list.confirmTime}
                td(class=!list.remark ? 'aCenter' : '') #{list.remark ? list.remark : '无'}
                td.aCenter
                  if(!list.status)
                    span.jBtn.minBtn 确认
                  else
                    span.greed 已确认

